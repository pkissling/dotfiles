{
  "auto_install_extensions": {
    "html": true,
    "python": true,
    "rust": true,
    "scss": true,
    "sql": true,
    "terraform": true,
    "vscode-dark-modern": true,
    "vscode-icons": true,
    "vue": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "buffer_font_family": "Zed Plex Mono",
  "buffer_font_size": 14,
  "features": {
    "edit_prediction_provider": "copilot",
    "copilot": true
  },
  "icon_theme": "VSCode Icons (Dark)",
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.esLint": true
      }
    },
    "Rust": {
      "format_on_save": "on"
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.esLint": true
      }
    },
    "Vue.js": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "code_actions_on_format": {
        "source.fixAll.esLint": true
      }
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "restore_on_startup": "last_session",
  "show_whitespaces": "all",
  "tab_bar": {
    "show": false
  },
  "tab_size": 2,
  "theme": {
    "dark": "VSCode Dark Modern",
    "light": "One Light",
    "mode": "system"
  },
  "ui_font_size": 16,
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  }
}
