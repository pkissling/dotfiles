[alias]
  # abbreviations
  a = add
  aa = add -A
  c = commit
  ca = commit -a
  cane = commit --amend --no-edit
  cam = commit -a -m
  cl = clean --force -d
  co = checkout
  cm = commit -m
  d = diff
  ds = diff --staged
  hist = log --pretty=format:'%C(yellow)[%ad]%C(reset) %C(green)[%h]%C(reset) | %C(red)%s %C(bold red){{%an}}%C(reset) %C(blue)%d%C(reset)' --graph --date=short
  p = push
  pfwl = push --force-with-lease
  r = reset
  rb = rebase
  s = status
  ss = status -s

  # scripts
  cleanup =  "!cleanup() { git fetch -p > /dev/null && for BRANCH in `git branch -vv | grep --invert-match '^*' | grep ': gone' | awk '{print $1}'`; do git branch -D ${BRANCH}; done; }; cleanup"
  rebase-master = "!rebasemaster() { git stash --include-untracked && git fetch -p && git rebase origin/master && git stash pop; }; rebasemaster"

[commit]
  gpgsign = true

[core]
  pager = delta --dark
  excludesfile = ~/.gitignore

[credential]
  helper = /usr/local/share/gcm-core/git-credential-manager-core

[credential "https://dev.azure.com"]
  useHttpPath = true

[diff]
  colorMoved = default
  tool = idea

[difftool "idea"]
  cmd = idea diff \"$LOCAL\" \"$REMOTE\"

[include]
  # user details
  path = ~/.gitconfig_user

[interactive]
  diffFilter = delta --color-only --dark

[merge]
  tool = idea

[mergetool]
  keepBackup = false

[mergetool "idea"]
  cmd = idea merge \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
  trustExitCode = true

[pull]
  rebase = false
  ff = only
