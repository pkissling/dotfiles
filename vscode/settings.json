{
    "diffEditor.ignoreTrimWhitespace": false,

    "dotfiles.installCommand": "~/dotfiles/install.sh",
    "dotfiles.repository": "https://github.com/pkissling/dotfiles-vscode.git",

    "files.watcherExclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/target": true
    },

    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "Fira Code",
    "editor.guides.bracketPairs": true,
    "editor.fontLigatures": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.inlineSuggest.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.suggestSelection": "first",
    "editor.tabSize": 2,

    "eslint.format.enable": true,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": true,
    "explorer.openEditors.visible": 0,

    "files.autoSave": "afterDelay",
    "files.associations": {
        "*.yaml": "yaml"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    "git.autofetch": true,
    "git.allowForcePush": true,
    "git.confirmForcePush": false,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.ignoreRebaseWarning": true,
    "git.mergeEditor": true,

    "javascript.updateImportsOnFileMove.enabled": "always",

    "mergeEditor.diffAlgorithm": "experimental",

    "problems.defaultViewMode": "table",

    "redhat.telemetry.enabled": false,

    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/target": true
    },

    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.macOptionClickForcesSelection": true, // fix copy/paste in integrated terminal
    "terminal.integrated.shell.osx": "/bin/bash",
    "terminal.integrated.shellArgs.osx": ["${env:HOME}/dotfiles/tmux/vscode-tmux-shell"],
    "terminal.external.osxExec": "Alacritty.app",

    "terraform.languageServer.enable": true,

    "tws.highlightTrailingWhiteSpace": true,
    "tws.trimOnSave": false,

    "typescript.updateImportsOnFileMove.enabled": "always",

    "window.autoDetectColorScheme": true,
    "window.commandCenter": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.showTabs": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editor.wrapTabs": true,
    "workbench.productIconTheme": "fluent-icons",
    "workbench.startupEditor": "none",

    //
    // Language specific
    //

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true
    },

    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    "[markdown]": {
        "editor.formatOnSave": true
    },

    "[terraform]": {
        "editor.formatOnSave": true
    },

    "[rust]": {
        "editor.formatOnSave": true
    },

    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    "[vue]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "none"
    },
    "yaml.customTags": [
        "!include_dir_merge_list",
        "!include_dir_merge_named",
        "!secret"
    ]
}