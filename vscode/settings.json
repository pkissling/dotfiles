{
    "diffEditor.ignoreTrimWhitespace": false,

    "dotfiles.installCommand": "echo private > ~/dotfiles/.profile && make -C ~/dotfiles git",
    "dotfiles.repository": "https://github.com/pkissling/dotfiles.git",

    "files.watcherExclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/target": true
    },

    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.renderWhitespace": "boundary",
    "editor.suggestSelection": "first",
    "editor.tabSize": 2,

    "eslint.format.enable": true,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,

    "files.autoSave": "afterDelay",
    "files.associations": {
        "*.yaml": "yaml"
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    "git.autofetch": true,
    "git.allowForcePush": true,
    "git.confirmForcePush": false,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,

    "liveshare.authenticationProvider": "Microsoft",

    "python.showStartPage": false,

    "rust-client.updateOnStartup": true,
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/target": true
    },

    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "terminal.external.osxExec": "Hyper.app",

    "terraform.languageServer": {

        "external": true,
        "args": [
            "serve"
        ]
    },

    "tws.highlightTrailingWhiteSpace": true,
    "tws.trimOnSave": false,

    "typescript.updateImportsOnFileMove.enabled": "always",

    "window.autoDetectColorScheme": true,

    "workbench.colorTheme": "Dracula Soft",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.showTabs": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.productIconTheme": "fluent-icons",
    "workbench.startupEditor": "none",

    //
    // Language specific
    //

    "[markdown]": {
        "editor.formatOnSave": true
    },

    "[terraform]": {
        "editor.formatOnSave": true
    },

    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    "[rust]": {
        "editor.formatOnSave": true
    },

    "[vue]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "none"
    },
    "yaml.customTags": [
        "!include_dir_merge_list",
        "!include_dir_merge_named",
        "!secret"
    ]
}